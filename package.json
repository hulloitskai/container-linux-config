{
  "name": "grapevine-config",
  "version": "0.2.0",
  "description": "Container Linux configuration for Grapevine, and related server units.",
  "repository": "git@github.com:steven-xie/grapevine-config",
  "author": "Steven Xie <hello@stevenxie.me>",
  "private": true,
  "scripts": {
    "make": "yarn mk-config && yarn prettier",
    "mk-config":
      "./tools/ct -pretty -strict -platform digitalocean -in-file src/container-linux-config.yml -out-file out/ignition-config.json",
    "prettier": "prettier --write **/*.json"
  },
  "devDependencies": {
    "prettier": "^1.12.1"
  }
}
